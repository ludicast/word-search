{
  "name": "@ludicast/word-search",
  "version": "2.0.0",
  "description": "Word search puzzle generator",
  "module": "out/index.js",
  "main": "out/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir=out --target=node",
    "build:doc": "jsdoc ./src -d docs",
    "test": "jest --verbose --coverage",
    "lint": "eslint --ext .js --max-warnings=0 ./src",
    "format": "eslint ./src --fix",
    "test:watch": "jest --verbose --coverage --watch",
    "coverage": "jest --coverage --coverageReporters=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ludicast/word-search.git"
  },
  "keywords": [
    "wordsearch",
    "word",
    "search",
    "puzzle",
    "mishmash",
    "grid",
    "generator"
  ],
  "author": "blex41",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ludicast/word-search/issues"
  },
  "homepage": "https://github.com/ludicast/word-search#readme",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/diacritics": "^1.3.3",
    "@types/lodash": "^4.17.10",
    "@types/seedrandom": "^3.0.8"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/jest": "^29.5.13",
    "diacritics": "^1.3.0",
    "lodash": "^4.17.21",
    "seedrandom": "^3.0.5"
  }
}